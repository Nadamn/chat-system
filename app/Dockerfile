FROM ruby:2.6.0

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        mysql-server \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /usr/src/app
VOLUME  /usr/src/app

COPY Gemfile* ./
RUN bundle install
COPY . .

RUN gem install elasticsearch-api	

EXPOSE 3000
# CMD ["rails", "server", "-b", "0.0.0.0"]
